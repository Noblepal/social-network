<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_notification_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/list_item_notification_desc_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/reaction"
        android:src="@drawable/ic_person" />

    <com.famousindiasocialnetwork.view.MontserratTextView
        android:id="@+id/list_item_notification_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="19dp"
        android:layout_toEndOf="@+id/list_item_notification_desc_img"
        android:layout_toRightOf="@+id/list_item_notification_desc_img"
        android:lineSpacingExtra="5sp"
        android:text="Someone disliked your post"
        android:textColor="#4e4e4e"
        android:textSize="12sp" />

    <com.famousindiasocialnetwork.view.MontserratTextView
        android:id="@+id/list_item_notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_notification_status"
        android:layout_toEndOf="@+id/list_item_notification_desc_img"
        android:layout_toRightOf="@+id/list_item_notification_desc_img"
        android:singleLine="true"
        android:text="10 sec ago"
        android:textColor="#ababab"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="19dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="#e3e3e3" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_notification_time" />

</RelativeLayout>