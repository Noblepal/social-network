<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_frag_profile_activity_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <com.famousindiasocialnetwork.view.MontserratTextView
        android:id="@+id/list_item_frag_profile_activity_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_frag_profile_right_arrow"
        android:text="Someone commented on your status"
        android:textColor="@android:color/black" />

    <com.famousindiasocialnetwork.view.MontserratTextView
        android:id="@+id/list_item_frag_profile_activity_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_frag_profile_activity_status"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="10 sec ago"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp" />


    <ImageView
        android:id="@+id/list_item_frag_profile_right_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_frag_profile_activity_time" />

</RelativeLayout>